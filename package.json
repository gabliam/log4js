{
  "name": "@gabliam/log4js",
  "version": "1.0.0",
  "description": "log4js plugin for gabliam",
  "keywords": [
    "log",
    "gabliam"
  ],
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "module": "lib/index.js",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "changelog": "conventional-changelog -i  CHANGELOG.md -s",
    "precommit": "lint-staged",
    "build-test": "npm run build",
    "build": "rimraf lib && npm run lint && tsc -p tsconfig.build.json",
    "prepublish": "publish-please guard",
    "prettier": "prettier --single-quote --write --parser typescript {src,test}/**/*.ts",
    "lint": "tslint --type-check --project tsconfig.json '{src,test}/**/*.ts'",
    "test": "jest",
    "publish-please": "publish-please"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "collectCoverage": false,
    "collectCoverageFrom": [
      "src/**/*.{ts}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "coverageDirectory": "coverage_jest_raw",
    "setupTestFrameworkScriptFile": "<rootDir>/__tests__/setup.js",
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*)\\.test\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  },
  "lint-staged": {
    "*.ts": [
      "prettier --single-quote --write --parser typescript",
      "tslint --type-check --project tsconfig.json",
      "git add"
    ]
  },
  "files": [
    "lib",
    "src",
    "custom-typings.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gabliam/log4js.git"
  },
  "author": "David Touzet <dtouzet@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gabliam/log4js/issues"
  },
  "homepage": "https://github.com/gabliam/log4js#readme",
  "peerDependencies": {
    "@gabliam/core": "^2.4.0",
    "joi": "^10.6.0"
  },
  "devDependencies": {
    "@gabliam/core": "^3.0.0",
    "@types/jest": "^20.0.7",
    "@types/joi": "^10.4.0",
    "@types/sinon": "^2.3.3",
    "commitizen": "^2.9.6",
    "conventional-changelog-cli": "^1.3.1",
    "cz-conventional-changelog": "^2.0.0",
    "husky": "^0.14.3",
    "jest": "^20.0.4",
    "joi": "^10.6.0",
    "lint-staged": "^4.0.0",
    "lodash": "^4.17.4",
    "prettier": "^1.4.4",
    "publish-please": "^2.3.1",
    "reflect-metadata": "^0.1.10",
    "remap-istanbul": "^0.9.5",
    "rimraf": "^2.6.1",
    "sinon": "^3.2.1",
    "ts-jest": "^20.0.10",
    "tslint": "^5.4.3",
    "tslint-eslint-rules": "^4.1.1",
    "typescript": "^2.4.2",
    "vrsource-tslint-rules": "^5.1.0"
  },
  "dependencies": {
    "@types/log4js": "^0.0.32",
    "log4js": "^2.3.3"
  }
}
