{
  "name": "@gabliam/log4js",
  "version": "1.0.0",
  "description": "log4js plugin for gabliam",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "module": "lib/index.js",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "changelog": "conventional-changelog -i  CHANGELOG.md -s",
    "precommit": "lint-staged",
    "build-test": "npm run build",
    "build": "rimraf lib && npm run lint && tsc",
    "prepublish": "publish-please guard",
    "prettier": "prettier --single-quote --write --parser typescript src/**/*.ts",
    "lint": "tslint --type-check --project tsconfig.json 'src/**/*.ts'",
    "test": "echo \"Error: no test specified\" && exit 1",
    "publish-please": "publish-please"
  },
  "lint-staged": {
    "*.ts": [
      "npm run prettier",
      "npm run lint",
      "git add"
    ]
  },
  "files": [
    "lib",
    "src",
    "custom-typings.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gabliam/log4js.git"
  },
  "keywords": [
    "log",
    "gabliam"
  ],
  "author": "David Touzet <dtouzet@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gabliam/log4js/issues"
  },
  "homepage": "https://github.com/gabliam/log4js#readme",
  "peerDependencies": {
    "@gabliam/core": "^2.4.0",
    "joi": "^10.6.0"
  },
  "devDependencies": {
    "@gabliam/core": "^2.4.0",
    "@types/joi": "^10.4.0",
    "@types/node": "^8.0.1",
    "commitizen": "^2.9.6",
    "conventional-changelog-cli": "^1.3.1",
    "cz-conventional-changelog": "^2.0.0",
    "husky": "^0.13.4",
    "joi": "^10.6.0",
    "lint-staged": "^4.0.0",
    "prettier": "^1.4.4",
    "publish-please": "^2.3.1",
    "rimraf": "^2.6.1",
    "tslint": "^5.4.3",
    "tslint-eslint-rules": "^4.1.1",
    "typescript": "^2.3.4",
    "vrsource-tslint-rules": "^5.1.0"
  },
  "dependencies": {
    "@types/log4js": "^0.0.32",
    "log4js": "^1.1.1"
  }
}
